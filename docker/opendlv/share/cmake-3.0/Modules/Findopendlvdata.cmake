# opendlvdata - Data structure library generated by DataStructureGenerator.
###########################################################################
# Try to find opendlvdata library.
# The user can specify an additional search path using the CMake variable
# OPENDLVDATA_DIR
# First, search at the specific user path setting.
IF(NOT ("${OPENDLVDATA_DIR}" STREQUAL ""))
    FIND_PATH(OPENDLVDATA_INCLUDE_DIR opendlvdata/GeneratedHeaders_opendlvdata.h
                 NAMES opendlvdata
                 PATHS ${OPENDLVDATA_DIR}/include
                 NO_DEFAULT_PATH)
    FIND_LIBRARY(OPENDLVDATA_LIBRARY
                 NAMES opendlvdata opendlvdata-static
                 PATHS ${OPENDLVDATA_DIR}/lib
                 NO_DEFAULT_PATH)
ENDIF()
IF(   ("${OPENDLVDATA_INCLUDE_DIR}" STREQUAL "OPENDLVDATA_INCLUDE_DIR-NOTFOUND")
   OR ("${OPENDLVDATA_DIR}" STREQUAL "") )
    MESSAGE(STATUS "Trying to find opendlvdata in default paths.")
    # If not found, use the system's search paths.
    FIND_PATH(OPENDLVDATA_INCLUDE_DIR opendlvdata/GeneratedHeaders_opendlvdata.h
                 NAMES opendlvdata
                 PATHS /usr/include
                       /usr/local/include)
    FIND_LIBRARY(OPENDLVDATA_LIBRARY
                 NAMES opendlvdata opendlvdata-static
                 PATHS /usr/lib
                       /usr/lib64
                       /usr/local/lib
                       /usr/local/lib64)
ENDIF()
IF("${OPENDLVDATA_INCLUDE_DIR}" STREQUAL "")
    MESSAGE(FATAL_ERROR "Could not find opendlvdata library.")
ENDIF()
###########################################################################
# Set linking libraries.
SET(OPENDLVDATA_LIBRARIES ${OPENDLVDATA_LIBRARY})
SET(OPENDLVDATA_INCLUDE_DIRS ${OPENDLVDATA_INCLUDE_DIR})
###########################################################################
